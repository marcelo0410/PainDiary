<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Pain Record"
            android:textAllCaps="true"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/top_view"/>
        <View
            android:id="@+id/view_record"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/tv_title"/>
        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/holo_green_dark" />
        <LinearLayout
            android:id="@+id/Date_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/tv_title">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Date"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1995/12/13"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/Date_LinearLayout"/>

        <LinearLayout
            android:id="@+id/Email_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/Date_LinearLayout">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Email"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Curry123@gmail.com"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/Email_LinearLayout"/>

        <LinearLayout
            android:id="@+id/pain_level_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/Email_LinearLayout">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Pain Level"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pain_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/pain_level_LinearLayout"/>

        <LinearLayout
            android:id="@+id/pain_location_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/pain_level_LinearLayout">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Pain location"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pain_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/pain_location_LinearLayout"/>

        <LinearLayout
            android:id="@+id/pain_mood_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/pain_location_LinearLayout">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Mood"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pain_mood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Very low"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/pain_mood_LinearLayout"/>

        <LinearLayout
            android:id="@+id/pain_step_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/pain_mood_LinearLayout">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Step Goal"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pain_stepGoal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="15000"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/pain_step_LinearLayout"/>

        <LinearLayout
            android:id="@+id/pain_physical_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/pain_step_LinearLayout">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Step Today"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pain_stepPhy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20000"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/pain_physical_LinearLayout"/>

        <LinearLayout
            android:id="@+id/temp_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/pain_physical_LinearLayout">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Temperature"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="25"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/temp_LinearLayout"/>

        <LinearLayout
            android:id="@+id/humidity_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/temp_LinearLayout">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Humidity"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="45"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/humidity_LinearLayout"/>

        <LinearLayout
            android:id="@+id/pressure_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_below="@id/humidity_LinearLayout">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:text="Pressure"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pressure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1100"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/holo_green_dark"
            android:layout_below="@id/pressure_LinearLayout"/>

    </RelativeLayout>


</LinearLayout>